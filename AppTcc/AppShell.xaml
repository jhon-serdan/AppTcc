<Shell
    x:Class="AppTcc.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:AppTcc.Views"
    xmlns:popups="clr-namespace:AppTcc.Popups"
    Shell.FlyoutBehavior="Disabled"
    Title="AppTcc"
    Shell.TabBarBackgroundColor="LightGrey"
    Shell.TabBarIsVisible="True">

    <TabBar>
        <Tab Title="Início" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate views:PaginaInicial}" />
        </Tab>

        <Tab Title="Transações" Icon="transacao.png">
            <ShellContent ContentTemplate="{DataTemplate views:Transacoes}" />
        </Tab>
    </TabBar>
</Shell>
